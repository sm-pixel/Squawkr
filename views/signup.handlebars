<header class="siteHeader">
  <div class="logoDiv">
    <i class="fas fa-crow fa-3x logo home-logo-click"></i>
    <h1 class="site-title home-logo-click">Squawkr</h1>
  </div>
</header>
<div class="ui raised very padded text blue inverted container segment">
  <form class="ui form segment create-form">
    <h2>Tell Us About Yourself</h2>
    <div class="field">
      <label>Name</label>
      <input placeholder="Name" name="name" type="text" id="name">
    </div>
    <div class="two fields">
      <div class="field">
        <label>Username</label>
        <input placeholder="Username" name="username" type="text" id="username">
      </div>
      <div class="field">
        <label>Password</label>
        <input placeholder="Password" type="password" name="password" id="password">
      </div>
    </div>
    <div class="field">
      <label>Email</label>
      <input placeholder="email@email.com" type="email" name="email" id="email">
    </div>
    <div class="field">
      <label>Location</label>
      <input placeholder="City, State" type="text" name="location" id="location">
    </div>
    <div class="field">
      <label>Picture Link</label>
      <input placeholder="Link to Profile Picture" type="text" name="profilePicLink" id="profilePicLink">
    </div>
    <div class="field">
      <label>Bio</label>
      <textarea placeholder="Tell Us About Yourself" type="text" name="bio" id="bio" rows="5" maxlength="200"></textarea>
    </div>
    <div class="ui pointing red basic label" id="signuperror">
      Username or Email already in use
    </div>
    <div id="bio-remaining">200 characters remaining</div>
    <div>
       <button class="ui primary submit button" type="submit">Submit</button>
   </div>

    <p><a href="/login" class="loginSignupThing">Already have an account? Login here</a></p>
  </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/signup.js"></script>